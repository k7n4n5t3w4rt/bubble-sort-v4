{
  "name": "goodthing",
  "description": "For making new Preact projects with server-side rendering, es modules and NO compilation during development",
  "version": "1.0.0",
  "author": "Kynan Stewart",
  "bugs": {
    "url": "https://github.com/k7n4n5t3w4rt/goodthing/issues"
  },
  "dependencies": {
    "finalhandler": "^1.1.2",
    "history": "^4.10.1",
    "htm": "^3.0.4",
    "immer": "^7.0.7",
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.9",
    "preact-router": "^3.2.1",
    "serve-static": "^1.14.1",
    "simplestyle-js": "^2.3.0-beta.0"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "cypress": "^4.11.0",
    "esinstall": "^1.1.7",
    "faucet": "0.0.1",
    "fixpack": "^3.0.6",
    "flow-bin": "^0.156.0",
    "glob": "^7.1.6",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.0",
    "should": "^13.2.3",
    "wait-on": "^5.1.0"
  },
  "scripts": {
    "browsersync": "cd public && browser-sync start --server",
    "browsersync:proxy": "browser-sync start --proxy 'localhost:4000' --files \".\"",
    "build": "snowpack build",
    "cloudrun:build": "gcloud builds submit --tag gcr.io/helpful-emitter-147506/benkobot-frontend",
    "cloudrun:deploy": "gcloud run deploy --image gcr.io/helpful-emitter-147506/benkobot-frontend --platform managed",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "docker:build": "docker build -t benkobot-frontend .",
    "docker:clean:containers": "docker rm -f $(docker ps -a -q)",
    "docker:clean:images": "docker rmi -f $(docker images -a -q)",
    "docker:compose": "docker-compose up --build",
    "docker:run": "docker run -p 4000:4000 benkobot-frontend --build",
    "esinstall": "node esinstall.js",
    "fixpack": "fixpack",
    "flow": "flow check",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "generate": "node --no-warnings server/static_generate_run.js",
    "generate:clear": "node --no-warnings server/static_clear.js",
    "generate:run": "npm run generate && npm run browsersync",
    "github-pages": "mv docs/CNAME ./ && rm -rf docs && mv public docs && mkdir public && mv CNAME docs/",
    "goodthing:update": "rsync -a --exclude='.git' --exclude='docs' --exclude='web_modules' ../goodthing/ ./",
    "lint": "prettier --check \"src/**/*.{js,jsx}\"",
    "start": "node server/index.js",
    "start:dev": "node -r dotenv/config server/index.js",
    "start:in-background": "nohup node server/index.js &",
    "start:wait-on": "npm start & wait-on http://localhost:4000",
    "test": "npm run testy && npm run cypress:run",
    "testy": "node --no-warnings server/testyrunner.js | faucet"
  },
  "type": "module"
}
